{
  "manifest_version": 2,
  "name": "Redmine2Gitlab",
  "version": "1.2.0",
  "description": "Synchronize Gitlab issue with Redmine issue",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Redmine to Gitlab issue",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "notifications",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "homepage_url": "https://github.com/alo7/chrome-extension-redmine2gitlab"
}
